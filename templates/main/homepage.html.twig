{% extends 'base.html.twig' %}

{% block title %}Starshop: Beam up some parts!!{% endblock %}

{% block body %}
<h1>Hola Solange!</h1>
<div>
    Browse through {{ numberOfStarships }} starships!
    {% if numberOfStarships > 400 %}
    <p>
        That's a shipload of ships!
    </p>
    {% endif %}
</div>
<div>
    <h2>My Ship</h2>
    <table>
        <tr>
            <th>Name</th>
            <td> {{ myShip.name | lower}} </td>
        </tr>
        <tr>
            <th>Class</th>
            <td> {{ myShip.class }} </td>
        </tr>
        <tr>
            <th>Captain</th>
            <td> {{ myShip.captain | upper }} </td>
        </tr>
        <tr>
            <th>Status</th>
            <td> {{ myShip.status | title }} </td>
        </tr>
    </table>
</div>
{% endblock %}